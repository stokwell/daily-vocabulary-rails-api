<div class="box">
  <div class="column left" style="background-color:#aaa;">
    <%= link_to "Daily Vocabulary", root_path, class: "dropdown-item" %>
    <%= link_to "Your Vocabulary", words_path, class: "dropdown-item" %>
  </div>
  <div class="column middle" style="background-color:#bbb;">
    <% @words.each do |word| %>
      <ul>
        <li>
          <%= word.original %>
          <%= word.translation %>
        </li>
      </ul>
    <% end %>
    <div id="words"></div>
  </div>
  <div class="column right" style="background-color:#ccc;">
    <%= render 'form', word: @word %>
  </div>
</div>
